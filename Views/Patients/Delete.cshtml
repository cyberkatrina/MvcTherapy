@model MvcTherapy.Models.Patient // tells view what type of model to work with

@{
    ViewData["Title"] = "Delete Patient"; // set browser title for Layout
}

<div class="container mt-4">
    <h2 class="mb-3">Confirm Deletion</h2>
    <h5>Are you sure you want to delete this patient?</h5>

    <div class="card shadow-sm mb-4 w-75">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(model => model.Appointment)</dt>
                <dd class="col-sm-9">@Model.Appointment.ToString("MMMM dd, yyyy h:mm tt")</dd>

                <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(model => model.Goals)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Goals)</dd>

            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-delete" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>
