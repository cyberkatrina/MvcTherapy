@model MvcTherapy.Models.Patient // tells view what type of model to work with

<form id="editPatientForm-@Model.Id">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-2">
        <label for="Name" class="form-label">Name</label>
        <input name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="mb-2">
        <label for="Appointment" class="form-label">Appointment</label>
        <input name="Appointment" class="form-control" type="datetime-local" 
               value="@Model.Appointment.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mb-2">
        <label for="Goals" class="form-label">Goals</label>
        <input name="Goals" class="form-control" value="@Model.Goals" />
    </div>

    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-success btn-sm">Save</button>
        <button type="button" class="btn btn-secondary btn-sm cancel-edit">Cancel</button>
    </div>
</form>
